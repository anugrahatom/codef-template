---
import ArticleCard from "@components/ArticleCard.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { Frontmatter, sortDateDescending } from "src/misc";

const allPosts = await Astro.glob<Frontmatter>("../pages/blog/articles/*.md");
const posts = sortDateDescending(
	allPosts.filter((post) => post.frontmatter.draft != true)
).slice(0, 3);
---

<BaseLayout title="Home" activeLink="home">
	<div class="border-t-8 border-stone-600;borber-b-8 border-stone-600;"></div>
	<div class="flex justify-center">
		<img
			width="1200"
			height="1200"
			src="images/logo.jpeg"
			alt="avatar"
			class="rounded-md h-fit self-center justify-self-center"
		/>
	</div><section
		class="flex flex-col sm:flex-row justify-center max-w-[90%] w-[52rem] mx-auto gap-12 mb-48"
	>
		<div class="flex flex-col flex-wrap flex-grow">
			<h1
				class="text-center text-7xl mb-[0.7em]"
				style="color: #987554; font-family: Roboto, Constantia, serif;"
			>
				<span class="font-style">Tony Chethalil</span>
			</h1>
			<style>
				body {
					background-color: rgb(255 255 255);
					color: black;
				}
			</style>

			<p
				class="text-center"
				style="font-family: Roboto, Constantia, serif;"
			>
				Hi There! I'm Tony Chethalil and I am a photographer from Essex.
				I recently started my photography business as a passion of mine,
				and I have been able to turn it into something much more!
			</p>

			<p
				class="text-center"
				style="font-family: Roboto, Constantia, serif;"
			>
				Please feel free to scroll through my page and if you feel like
				you would want me to capture your special day, then please
				contact us through the email provided on the enquiries form and
				we will get back to you at the earliest convenience. It would be
				an honour!
			</p>
			<div class="flex flex-wrap justify-center gap-5 mt-4">
				<a
					class="w-8 h-8 flex scale-1 hover:scale-125 transition-[scale] justify-center"
					href="https://www.instagram.com/kad_damn_/"
					target="_blank"
					rel="noreferrer noopener"
				>
					<span class="sr-only">Link to my Instagram page!</span>
					<img src="/images/instagram logo.jpeg" />
				</a>
			</div>
		</div>
	</section>

	<section>
		<h2
			class="text-center text-5xl mb-[0.7em]"
			style="color: #987554; font-family: Roboto, Constantia, serif;"
		>
			<span class=""> More</span>
		</h2>

		<div class="flex flex-wrap flex-col justify-center gap-12">
			{posts.map((post) => <ArticleCard content={post} />)}
		</div>
	</section>
</BaseLayout>
