            inkscape:label="Ebene 1"
            inkscape:groupmode="layer"
            id="layer1"
            transform="translate(-30.972436,-202.26931)"
          >
            <g id="g4157">
              <rect
                ry="11.184659"
                y="202.77477"
                x="92.161545"
                height="53.792881"
                width="95.282639"
                id="rect4136-5"
                style="fill:#000000;fill-opacity:1;stroke:#000000;stroke-width:1.01090431;stroke-miterlimit:4;stroke-dasharray:none"
              ></rect>
              <rect
                ry="32.262199"
                y="219.69022"
                x="32.262199"
                height="155.16582"
                width="215.08133"
                id="rect4136"
                style="fill:#000000;fill-opacity:1;stroke:#000000;stroke-width:2.57952762;stroke-miterlimit:4;stroke-dasharray:none"
              ></rect>
              <circle
                r="48.803452"
                cy="297.27313"
                cx="139.80286"
                id="path4138"
                style="fill:none;fill-opacity:1;stroke:#ffffff;stroke-width:10.62992096;stroke-miterlimit:4;stroke-dasharray:none"
              ></circle>
              <circle
                r="11.237184"
                cy="256.4501"
                cx="66.171921"
